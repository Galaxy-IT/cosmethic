        +img('general/logo-blue', 'png')

      .__menu
        .__menu-mobile
          .__menu-mobile__lebel Menu
          .__menu-mobile__buttons
            button.__menu-mobile__button
              +icon('search-grey')
            button.__menu-mobile__button
              +icon('wishlist-grey')
